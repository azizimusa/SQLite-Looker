<script>
    function updatetable(tableName) {

        const child = tableName.find('.gemma-table').attr('id');
        $('#tableName').text(child);

        fetch('/table/' + child,{
            method: 'get',
        }).then(response => response.json())
            .then(message => {

                const gemmaData = message[0];
                const gemmaDataColumn = message[1];

                const tableColumn = $('#tableColumn');
                tableColumn.empty();

                $.each(gemmaDataColumn, function(index, item) {
                    const th = "<th scope='col'>"+item.name+"</th>";
                    tableColumn.append(th);
                })

                const table = $('#tableData');
                table.empty();

                $.each(gemmaData, function(index, rowData) {
                    const tr = $("<tr>");
                    table.append(tr);

                    $.each(gemmaDataColumn, function(index, columnData) {
                        const trData = $("<td>"+rowData[columnData.name]+"</td>");
                        table.append(trData);
                    })

                })

            })
            .catch(error => {
                console.error(error);
            })
    }
</script>

<script>

    function handleFileSelect(file){
        // Clear the timer
        clearInterval(timerId);

        const formData = new FormData();
        formData.append('gemmadb', file);

        fetch('/copydb', {
            method: 'POST',
            body: formData
        })
            .then(response => response.text())
            .then(message => {
                console.log(message);
            })
            .catch(error => {
                console.error('Error uploading file:', error);
            });
    }

    let timerId = setInterval(() => {
        const fileInput = document.getElementById('importFile');
        if (fileInput.files.length > 0) {

            const file = fileInput.files[0];

            handleFileSelect(file);
        }
    }, 1000);
</script>

